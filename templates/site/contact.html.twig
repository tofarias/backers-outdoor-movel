{% extends 'layout.site.html.twig' %}

{% block content %}

<div class="impl_contact_wrapper">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-md-12">
                    <div class="impl_con_form">

                        <div class="col-lg-12 col-md-12 text-center">
                            <h1>Entre em Contato</h1>
                        </div>
                        <form method="POST" action="{{ route('site.contact.message.send') }}" onSubmit="return validateForm(this);">
                            <div class="col-lg-12 col-md-12">
                                <div class="form-group">
                                    <input type="text" required name="name" class="form-control require" placeholder="NOME">
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12">
                                <div class="form-group">
                                    <input type="email" required name="email" class="form-control require" placeholder="E-MAIL" data-valid="email" data-error="Email should be valid.">
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12">
                                <div class="form-group">
                                    <input type="text" required name="address" class="form-control require" placeholder="ENDEREÇO" data-valid="address" data-error="Email should be valid.">
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12">
                                <div class="form-group">
                                    <input type="text" required name="subject" class="form-control" placeholder="ASSUNTO">
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12">
                                <div class="form-group">
                                    <textarea name="message" required class="form-control" placeholder="MENSAGEM"></textarea>
                                </div>
                            </div>
                            <div class="response"></div>
                            <div class="col-lg-12 col-md-12 text-center">
                                <input type="hidden" name="form_type" value="contact">
                                <button type="submit" class="impl_btn submitForm">Enviar Mensagem</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12">
                    <div class="impl_contact_info">
                        <div class="row">
                            <div class="col-lg-4 col-md-4">
                                <div class="impl_contact_box">
                                    <div class="impl_con_data">
                                        <i class="fa fa-phone" aria-hidden="true"></i>
                                        <h2>Fone</h2>
                                        <p>(11) 3456 7890</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4">
                                <div class="impl_contact_box">
                                    <div class="impl_con_data">
                                        <i class="fa fa-home" aria-hidden="true"></i>
                                        <h2>Localização</h2>
                                        <p>Jundiaí, SP, Brasil</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-md-4">
                                <div class="impl_contact_box">
                                    <div class="impl_con_data">
                                        <i class="fa fa-envelope" aria-hidden="true"></i>
                                        <h2>E - mail</h2>
                                        <p>atendimento@backers.com.br</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block scripts %}
    
    function validateForm(form)
    {
        debugger;
        var isValid = true;
        if( form.elements.name.value.length < 4 ){
            alert('O campo NOME deve ser preenchido!');
            isValid = false;
        }else
        if( form.elements.email.value.length < 4 ){
            alert('O campo E-MAIL deve ser preenchido!');
            isValid = false;
        }else
        if( form.elements.address.value.length < 4 ){
            alert('O campo ENDEREÇO deve ser preenchido!');
            isValid = false;
        }else
        if( form.elements.subject.value.length < 4 ){
            alert('O campo ASSUNTO deve ser preenchido!');
            isValid = false;
        }else
        if( form.elements.message.value.length < 4 ){
            alert('O campo MENSAGEM deve ser preenchido!');
            isValid = false;
        }

        return false;
    }

{% endblock scripts %}