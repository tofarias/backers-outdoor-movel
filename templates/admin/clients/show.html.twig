{% extends 'layout.admin.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Ver Cliente
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-12"></div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-bordered">
                                <tbody>
                                <tr>
                                    <th scope="row">Documento</th>
                                    <td>{{ client.doc_id }}</td>
                                </tr>
                                <tr>
                                    {% if client.doc_type == 'cpf' %}
                                    <th scope="row">Nome</th>
                                    <td>{{ client.name }}</td>
                                    {% else %}
                                    <th scope="row">E-mail</th>
                                    <td>{{ client.email }}</td>
                                    {% endif %}
                                </tr>
                                </tbody>
                            </table>
                            <a onclick="return validate();" href="{{ route('client.delete',{'id': client.id}) }}" class="btn btn-danger">
                                Excluir
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}

function validate()
{
    if( confirm("Confirma a exclus√£o do registro?") )
    {
        return true;
    }

    return false;
}

{% endblock %}