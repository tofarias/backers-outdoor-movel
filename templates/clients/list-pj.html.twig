{% extends 'layout.html.twig' %}
{% import 'macros.twig' as myMacros %}


{% block style %}
.font-8pt{ font-size: 8pt; }
{% endblock style %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Administração de clientes - PJ
                    </h3>
                </div>
                <div class="panel-body">
                    {# <div class="row">
                        <div class="col-md-12">
                            <a href="{{ route('client.new') }}" class="btn btn-default">
                                <span class="glyphicon glyphicon-plus"></span>
                            </a>
                        </div>
                    </div> #}
                    <br/>
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-bordered">
                                <thead>
                                <tr>
                                    <th style="width: 10px">#</th>
                                    <th class="text-center">NOME</th>
                                    <th class="text-center">E-MAIL</th>
                                    <th class="text-center">TELEFONE</th>
                                    <th class="text-center">DOCUMENTO</th>
                                    <th class="text-center">RAMO / EMPRESA</th>
                                    <th class="text-center">VEÍCULO / MODELO</th>
                                    <th class="text-center">DT. CADASTRO</th>
                                    <th class="text-center">AÇÕES</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for client in clients %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>{{ client.name }}</td>
                                        <td>{{ client.email }}</td>
                                        <td>{{ client.phone }}</td>
                                        <td>{{ client.doc_id }}</td>
                                        <td align="center">{{ client.company_category ?: '-' }}</td>
                                        <td align="center">{{ client.car_model ?: '-' }}</td>
                                        <td>{{ client.created_at|date('d/m/Y H:i') }}</td>

                                        <td class="text-center">
                                            {# <a href="{{ route('client.edit', {'id' : client.id}) }}">
                                                <span class="glyphicon glyphicon-pencil"></span>
                                            </a>
                                            | #}
                                            <a href="{{ route('client.show', {'id' : client.id}) }}">
                                                <span class="glyphicon glyphicon-remove"></span>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            {# {{ myMacros.pagination(clients|length, page, '/clientes?page=') }} #}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}